@{
    ViewData["Title"] = "Results Page";
}
<!DOCTYPE html>
<html lang="en">
    <head>
         <meta charset="UTF-8">
         <title>QuotingDojo</title>
         <style type="text/css">
            logo {
                text-align: center;
            }
            .quotes {
                margin: auto;
                width: 40%;
                text-align: center;
                border: 1px solid black;
            }

            #quote {
                width: 50%;
                text-align: left;
                display: inline-block;
            }

            #id {
                text-align: center;
                display: inline-block;
            }

            #delete {
                display: inline-block;
                margin-left: 20px;
            }

            form {
                display: inline-block;
                margin: auto;
            }

         </style>
    </head>
    <body>
        <logo>
            <h1>Here are the awesome quotes!</h1>
        </logo>

        <wrapper>

            @foreach (var quote in ViewBag.Quotes)
            {
                <div class="quotes">
                        <p id="quote">@quote.Quote</p> <!-- "Quote" must match case with Quote Model's class 'Quote' -->
                        <br>
                        <p id="id"> @quote.user.first_name @quote.user.last_name - at @quote.Updated_at</p>
                        @if (@quote.user_id == ViewBag.User) 
                        {
                            <a id="delete" href="/delete/@quote.id">Delete</a>
                            <a id="edit" href="/edit/@quote.id">Edit</a>
                        }
                </div>
            }
            <a id="back" href="/Add">Go Back</a>
        </wrapper>

    </body>
</html>